<%- include('../partials/header') %>
<div class="container">
    <div class="row mt-5">
        <div class="col-lg-12 mx-auto">
            <% if(message.success){ %>
                    <div class="alert alert-success" role="alert">
                        <strong><%= message.success %></strong>
                    </div>
                <% } %>

                <% if(message.error){ %>
                    <div class="alert alert-danger" role="alert">
                        <strong><%= message.error %></strong>
                    </div>
                <% } %>
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="fw-bold text-secondary">My Posts</h2>
                    <a class="btn btn-primary" href="/create-post">Create New Post</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <td>Post Title</td>
                            <td>Post Content</td>
                            <td>Post Image</td>
                            <td>Post Created At</td>
                            <td>
                                <a class="btn bt-sm btn-primary" href="/edit-post/001">Edit Post</a>
                                <a class="btn bt-sm btn-danger" href="/delete-post">Delete Post</a>
                            </td>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>